.col-md-6.col-md-offset-3
  .panel
    .panel-heading
      h3.panel-title 注册
    .panel-body
      = form_for @user, html: { id: 'new-user-form' } do |f|
        = render 'share/form_error_messages', form: f
        .form-group
          = f.label :email, class: 'control-label'
          = f.text_field :email, placeholder: '你的邮箱地址', tabindex: 2, class: 'form-control'
        .form-group
          = f.label :name, class: 'control-label'
          = f.text_field :name, placeholder: '你的昵称', tabindex: 3, class: 'form-control'
        .form-group
          = f.label :password, class: 'control-label'
          = f.password_field :password, placeholder: '设定密码', tabindex: 4, class: 'form-control'
        = f.submit '提交注册', class: 'btn btn-primary', tabindex: 5

javascript:
  $('#new-user-form').validate({
    rules: {
      'user[email]': {
        required: true,
        format: /^([^@\s]+)@((?:[a-z0-9-]+\.)+[a-z]{2,})$/i,
        remote: '/users/check_email'
      },
      'user[name]': {
        required: true,
        remote: '/users/check_name',
        format: /^[a-z0-9-]+$/i,
        minlength: 4,
        maxlength: 20
      },
      'user[password]': {
        required: true
      }
    },
    messages: {
      'user[email]': {
        required: '#{@user.errors.generate_message :email, :blank}',
        remote: '#{@user.errors.generate_message :email, :taken}',
        format: '#{@user.errors.generate_message :email, :format}'
      },
      'user[name]': {
        required: '#{@user.errors.generate_message :name, :blank}',
        remote: '#{@user.errors.generate_message :name, :taken}',
        format: '#{@user.errors.generate_message :name, :format}',
        minlength: '#{@user.errors.generate_message :name, :length}',
        maxlength: '#{@user.errors.generate_message :name, :length}'
      },
      'user[password]': {
        required: '#{@user.errors.generate_message :password, :blank}'
      }
    }
  });